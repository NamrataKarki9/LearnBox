// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  username   String    @unique
  email      String    @unique
  password   String
  first_name String?
  last_name  String?
  role       Role      @default(STUDENT)
  is_verified Boolean  @default(false)  // Added for email verification
  collegeId  Int?
  college    College?  @relation(fields: [collegeId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  
  // Relations
  resources  Resource[]
  mcqs       MCQ[]
  modules    Module[]
  attempts   MCQAttempt[]
  progress   Progress[]
  summaries  DocumentSummary[]
  mcqSets    MCQSet[]
  quizSessions QuizSession[]
  analytics  PerformanceAnalytics[]
  
  @@index([email])
  @@index([collegeId])
}

model College {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  code        String     @unique
  location    String?
  description String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  // Relations
  users       User[]
  resources   Resource[]
  mcqs        MCQ[]
  modules     Module[]
  faculties   Faculty[]
  mcqSets     MCQSet[]
  quizSessions QuizSession[]
  
  @@index([code])
}

model Faculty {
  id          Int        @id @default(autoincrement())
  name        String
  code        String
  description String?
  collegeId   Int
  college     College    @relation(fields: [collegeId], references: [id])
  modules     Module[]
  resources   Resource[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@unique([code, collegeId])
  @@index([collegeId])
}

model Resource {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  fileUrl     String
  fileType    String
  year        Int      // Academic year (1, 2, 3, 4, etc.) - now mandatory
  facultyId   Int      // Faculty/department reference - now mandatory
  moduleId    Int      // Module reference - now mandatory
  collegeId   Int
  uploadedBy  Int
  college     College  @relation(fields: [collegeId], references: [id])
  uploader    User     @relation(fields: [uploadedBy], references: [id])
  module      Module   @relation(fields: [moduleId], references: [id])
  faculty     Faculty  @relation(fields: [facultyId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([collegeId])
  @@index([moduleId])
  @@index([year])
  @@index([facultyId])
}

model Module {
  id          Int        @id @default(autoincrement())
  name        String
  code        String
  description String?
  year        Int        // Academic year (1, 2, 3)
  facultyId   Int        // Faculty reference
  collegeId   Int
  createdBy   Int
  college     College    @relation(fields: [collegeId], references: [id])
  creator     User       @relation(fields: [createdBy], references: [id])
  faculty     Faculty    @relation(fields: [facultyId], references: [id])
  mcqSets     MCQSet[]
  quizSessions QuizSession[]
  analytics   PerformanceAnalytics[]
  resources   Resource[]
  mcqs        MCQ[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@unique([code, collegeId, facultyId, year])
  @@index([collegeId])
  @@index([facultyId])
  @@index([year])
}

model MCQ {
  id          Int          @id @default(autoincrement())
  question    String
  options     Json         // Array of options
  correctAnswer String
  explanation String?
  difficulty  Difficulty   @default(MEDIUM)
  moduleId    Int?
  collegeId   Int
  createdBy   Int
  topic       String?      // Specific topic/subtopic for analytics
  source      MCQSource    @default(MANUAL) // MANUAL or AI_GENERATED
  college     College      @relation(fields: [collegeId], references: [id])
  creator     User         @relation(fields: [createdBy], references: [id])
  module      Module?      @relation(fields: [moduleId], references: [id])
  attempts    MCQAttempt[]
  setMCQs     SetMCQ[]     // MCQs can belong to multiple sets
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@index([collegeId])
  @@index([moduleId])
  @@index([topic])
}

model MCQAttempt {
  id              Int          @id @default(autoincrement())
  mcqId           Int
  studentId       Int
  selectedAnswer  String
  isCorrect       Boolean
  sessionId       Int?         // Link to quiz session if part of one
  mcq             MCQ          @relation(fields: [mcqId], references: [id])
  student         User         @relation(fields: [studentId], references: [id])
  session         QuizSession? @relation(fields: [sessionId], references: [id])
  attemptedAt     DateTime     @default(now())
  
  @@index([studentId])
  @@index([mcqId])
  @@index([sessionId])
}

model Progress {
  id          Int      @id @default(autoincrement())
  studentId   Int
  moduleId    Int
  completedAt DateTime @default(now())
  student     User     @relation(fields: [studentId], references: [id])
  
  @@unique([studentId, moduleId])
  @@index([studentId])
}

// Email OTP for verification and password reset
model EmailOTP {
  id         Int      @id @default(autoincrement())
  email      String
  otp        String   // 6-digit OTP
  purpose    OTPPurpose
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  
  @@index([email, purpose])
  @@index([expiresAt])
}

// MCQ Sets - Groups of questions (admin-created or AI-generated from PDF)
model MCQSet {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  moduleId    Int?
  collegeId   Int
  createdBy   Int
  source      MCQSource    @default(MANUAL) // MANUAL or AI_GENERATED
  sourceFile  String?      // If AI-generated, store PDF URL
  isPublic    Boolean      @default(true) // Available to all college students
  college     College      @relation(fields: [collegeId], references: [id])
  creator     User         @relation(fields: [createdBy], references: [id])
  module      Module?      @relation(fields: [moduleId], references: [id])
  mcqs        SetMCQ[]     // MCQs in this set
  sessions    QuizSession[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@index([collegeId])
  @@index([moduleId])
  @@index([createdBy])
}

// Junction table for MCQs and Sets (many-to-many)
model SetMCQ {
  id        Int     @id @default(autoincrement())
  setId     Int
  mcqId     Int
  order     Int     @default(0) // Order in the set
  set       MCQSet  @relation(fields: [setId], references: [id], onDelete: Cascade)
  mcq       MCQ     @relation(fields: [mcqId], references: [id], onDelete: Cascade)
  
  @@unique([setId, mcqId])
  @@index([setId])
  @@index([mcqId])
}

// Quiz Sessions - Student takes a full quiz (Google Forms style)
model QuizSession {
  id              Int          @id @default(autoincrement())
  studentId       Int
  setId           Int?         // If from a predefined set
  moduleId        Int?
  collegeId       Int
  status          SessionStatus @default(IN_PROGRESS)
  score           Int?         // Calculated after submission
  totalQuestions  Int
  correctAnswers  Int?
  timeSpent       Int?         // Seconds spent on quiz
  student         User         @relation(fields: [studentId], references: [id])
  set             MCQSet?      @relation(fields: [setId], references: [id])
  module          Module?      @relation(fields: [moduleId], references: [id])
  college         College      @relation(fields: [collegeId], references: [id])
  attempts        MCQAttempt[]
  startedAt       DateTime     @default(now())
  submittedAt     DateTime?
  
  @@index([studentId])
  @@index([setId])
  @@index([moduleId])
  @@index([collegeId])
}

// Performance Analytics - Track student weak points
model PerformanceAnalytics {
  id              Int      @id @default(autoincrement())
  studentId       Int
  moduleId        Int?
  topic           String?  // Specific topic/subtopic
  difficulty      Difficulty
  totalAttempts   Int      @default(0)
  correctAttempts Int      @default(0)
  accuracy        Float    @default(0.0) // Percentage
  lastAttemptedAt DateTime @default(now())
  student         User     @relation(fields: [studentId], references: [id])
  module          Module?  @relation(fields: [moduleId], references: [id])
  updatedAt       DateTime @updatedAt
  
  @@unique([studentId, moduleId, topic, difficulty])
  @@index([studentId])
  @@index([moduleId])
  @@index([accuracy]) // For finding weak points
}

enum Role {
  SUPER_ADMIN
  COLLEGE_ADMIN
  STUDENT
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum OTPPurpose {
  REGISTER
  FORGOT_PASSWORD
}

enum MCQSource {
  MANUAL        // Created by admin
  AI_GENERATED  // Generated from PDF
}

enum SessionStatus {
  IN_PROGRESS
  SUBMITTED
  ABANDONED
}

// Document Summary for AI-powered summarization
model DocumentSummary {
  id                Int      @id @default(autoincrement())
  userId            Int
  user              User     @relation(fields: [userId], references: [id])
  
  // Document info
  originalFileName  String
  fileUrl           String
  fileType          String
  fileSize          Int
  
  // Summary data
  quickSummary      String   @db.Text
  detailedSummary   String?  @db.Text
  studyNotes        String?  @db.Text
  keyConcepts       Json?    // Array of key concepts with definitions
  
  // Metadata
  processingTime    Int      // milliseconds
  model             String   // LLM model used (e.g., gemma3:1b)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relations
  questions         SummaryQuestion[]
  
  @@index([userId])
  @@index([createdAt])
  @@map("document_summaries")
}

// Questions and answers about documents
model SummaryQuestion {
  id        Int             @id @default(autoincrement())
  summaryId Int
  summary   DocumentSummary @relation(fields: [summaryId], references: [id], onDelete: Cascade)
  
  question  String
  answer    String          @db.Text
  
  createdAt DateTime        @default(now())
  
  @@index([summaryId])
  @@map("summary_questions")
}
